<Window x:Class="WpfApp1.NewFolder.FrmKolicina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.NewFolder"
        mc:Ignorable="d"
        Title="Kolicina" Height="300" Width="300">
    <Grid>
        <Label Content="UNESI KOLICINU" HorizontalAlignment="Center" Height="60" Margin="0,31,0,0" VerticalAlignment="Top" Width="200" FontSize="22"/>
        <TextBox x:Name="tbKolicina" HorizontalAlignment="Center" Height="37" Margin="0,115,0,0" VerticalAlignment="Top" Width="158" FontSize="22"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,240,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,240,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
